<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:weightSum="1">
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/amount_text_view"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp"
            android:layout_weight="0.59"
            android:layout_gravity="center_horizontal"
            android:hint="1.0"/>

        <Spinner
            android:layout_width="126dp"
            android:layout_height="68dp"
            android:id="@+id/unit_type_spinner"

            />
    </LinearLayout>



    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="83dp"
        android:orientation="horizontal"
        android:padding="15dp"
        android:columnCount="2"
        android:rowCount="6"
        android:background="#ffcecdd5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/tsp_view"
                android:id="@+id/tsp_text_view"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/cup_text_view"
                android:text="0.0208 cup"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0.3333 tbs"
                android:id="@+id/tbs_text_view"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0.1666 oz"
                android:id="@+id/oz_text_view"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0.0057 kg"
                android:id="@+id/kg_text_view"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0.0052 quart"
                android:id="@+id/quart_text_view"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0.0013 gallon"
                android:id="@+id/gallon_text_view"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0.0125 pound"
                android:id="@+id/pound_text_view"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="4.9289 ml"
                android:id="@+id/ml_text_view"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0.0049 liter"
                android:id="@+id/liter_text_view"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="5687.5000 mg"
                android:id="@+id/mg_text_view"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0.0104 pint"
                android:id="@+id/pint_text_view"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:textColor="@android:color/black"/>

    </GridLayout>

</RelativeLayout>
